<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDEECC"
    android:layout_marginTop="20dp"
    tools:context=".NoteView">



        <Button
            android:id="@+id/saveb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:text="save"
            android:textColor="@color/white"
            android:backgroundTint="#8BC34A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/cancelb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:text="back"
            android:backgroundTint="#006064"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete"
            android:backgroundTint="#FF8A80"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/saveb"
            app:layout_constraintStart_toEndOf="@+id/cancelb"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/titleed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:allowUndo="true"
        android:background="@android:color/transparent"
        android:hint="Title"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancelb" />

    <EditText
        android:id="@+id/texted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="text"
        android:layout_margin="30dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:allowUndo="true"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleed" />

</androidx.constraintlayout.widget.ConstraintLayout>